<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/x_record_parts4bg_shape"
    android:id="@id/record4line_category4eye"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin_m"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_padding_m">

    <ImageView
        android:contentDescription="@string/global_null_text"
        android:id="@id/id_category_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/ic_part_eye_pressed" />

    <LinearLayout
        android:id="@id/id_category_label_ly"
        android:layout_alignTop="@id/id_category_image"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/id_category_image"
        android:layout_toRightOf="@id/id_category_image"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:id="@id/id_conditon_label"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:layout_width="0dp"
            android:text="@string/skin_healthLabel4status"
            android:textColor="@color/theme_primary_white"
            android:textSize="@dimen/font_body2" />

        <TextView
            android:gravity="bottom"
            android:id="@id/id_water_value_label"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:layout_width="0dp"
            android:text="@string/skin_healthLabel4waterValue"
            android:textColor="@color/theme_primary_white"
            android:textSize="@dimen/font_body2" />

        <TextView
            android:gravity="bottom"
            android:id="@id/id_result_compare_label"
            android:layout_height="wrap_content"
            android:layout_weight="0.34"
            android:layout_width="0dp"
            android:text="@string/skin_healthLabel4comparsion_day"
            android:textColor="@color/theme_primary_white"
            android:textSize="@dimen/font_body2" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/id_category_value_ly"
        android:layout_below="@id/id_category_label_ly"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/id_category_image"
        android:layout_toRightOf="@id/id_category_image"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:gravity="center"
            android:id="@id/id_conditon_value"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:layout_width="0dp"
            android:paddingBottom="@dimen/activity_padding_s"
            android:paddingTop="@dimen/activity_padding_s"
            android:text=""
            android:textColor="@color/theme_second_gray"
            android:textSize="@dimen/font_body1" />

        <TextView
            android:gravity="center"
            android:id="@id/id_water_val_value"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:layout_width="0dp"
            android:paddingBottom="@dimen/activity_padding_s"
            android:paddingTop="@dimen/activity_padding_s"
            android:text=""
            android:textColor="@color/theme_thrid_gray"
            android:textSize="@dimen/font_body2" />

        <TextView
            android:gravity="center"
            android:id="@id/id_result_compare_value"
            android:layout_height="wrap_content"
            android:layout_weight="0.34"
            android:layout_width="0dp"
            android:paddingBottom="@dimen/activity_padding_s"
            android:paddingTop="@dimen/activity_padding_s"
            android:text=""
            android:textColor="@color/theme_thrid_gray"
            android:textSize="@dimen/font_body2" />
    </LinearLayout>

    <SeekBar
        android:focusable="false"
        android:id="@id/id_compare_process"
        android:layout_below="@id/id_category_value_ly"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_padding_m"
        android:layout_marginStart="@dimen/activity_padding_m"
        android:layout_toEndOf="@id/id_category_image"
        android:layout_toRightOf="@id/id_category_image"
        android:layout_width="match_parent"
        android:max="100"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progressDrawable="@drawable/x_record_process_seekbar"
        android:thumb="@drawable/ic_record_thumb" />
</RelativeLayout>
