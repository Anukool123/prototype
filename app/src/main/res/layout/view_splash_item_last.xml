<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abc_primary_text_disable_only_material_dark"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@id/pre_setting_image_last"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/global_null_text"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_test_bg" />

    <Button
        android:id="@id/pre_setting_btn_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="@dimen/activity_margin_m"
        android:layout_marginRight="@dimen/activity_margin_m"
        android:background="@drawable/x_enter_btn"
        android:gravity="center"
        android:text="@string/user_pre_setting_certain"
        android:textColor="@drawable/x_btn_color_selector"
        android:textSize="@dimen/font_body1" />
</RelativeLayout>
